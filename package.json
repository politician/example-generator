{
  "name": "example-generator",
  "description": "Very opinionated example generator for your library.",
  "version": "1.0.0",
  "author": {
    "name": "Romain Barissat"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/incorrupt/example-generator",
  "repository": "https://github.com/incorrupt/example-generator",
  "bugs": {
    "url": "https://github.com/incorrupt/example-generator/issues"
  },
  "contributors": [
    {
      "name": "Romain Barissat"
    }
  ],
  "directories": {
    "example": "./examples",
    "test": "./tests"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "types": "dist/types/index.d.ts",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "build": "yarn run clean && yarn build:types && yarn build:js",
    "build:js": "mkdir dist/cjs dist/esm && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json && echo '{\"type\":\"module\"}' > dist/esm/package.json && rollup -c .config/rollup.config.js",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist && mkdir dist",
    "format": "yarn lint --fix",
    "lint": "eslint src tests",
    "prepack": "yarn build --environment BUILD:production",
    "test": "jest --config .config/jest.config.json && yarn test:types && yarn lint",
    "test:types": "tsc -p tests",
    "test:types:watch": "yarn test:types --watch",
    "watch": "yarn run clean && yarn build:js --watch"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git-cz --hook || true",
      "commit-msg": "echo $HUSKY_GIT_PARAMS && echo $HUSKY_GIT_STDIN && commitlint -E HUSKY_GIT_PARAMS --config .config/commitlint.config.js"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-babel": "^5.0.3",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "builtin-modules": "^3.1.0",
    "commitizen": "^4.1.2",
    "conventional-changelog-conventionalcommits": "^4.3.0",
    "core-js": "^3.6.5",
    "cz-customizable": "^6.2.1",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "rollup": "^2.21.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "semantic-release": "^17.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.10.2",
    "@types/node": "^14.0.19"
  }
}
